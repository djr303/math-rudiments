{
  "compilerOptions": {
    "target": "ES5",
    "outDir": "./dist",
    "rootDir": "./",
    "noImplicitAny": false,
    "types": [
      "@types/node",
      "@types/jest"
    ],
    "baseUrl": ".",
    "moduleResolution": "Node",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
  },
  "include": ["src/**/*", "src/.config.ts"],
  "exclude": ["src/**/*test.ts", "node_modules", "dist"],
}
